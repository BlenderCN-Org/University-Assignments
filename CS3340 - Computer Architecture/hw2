.data

message:	.space		128
messagePrompt:	.asciiz		"Please enter a string::"
messageBuffer:	.word		128


.text
# Prompting Message
	la $a0, messagePrompt
	la $a1, message
	la $a2, messageBuffer
	li $v0, 54
	syscall
	
# First Print : Full string
	la $a0, message
	li $v0, 4
	syscall
#
	la $t0, message
	li $t1, -1
	jal CountingFunction
	
# Program Exit
	li $v0, 10
	syscall
	
	
CountingFunction: # Returns length of string
	loop:
		lb $a0, 0($t0)
		beqz $a0, done
		addi $t0, $t0, 1
		addi $t1, $t1, 1
		j loop	
		
	done:
		li $v0, 1
		add $a0, $0, $t1
		syscall
		jr	$ra